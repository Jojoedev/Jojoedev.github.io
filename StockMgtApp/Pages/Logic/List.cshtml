@page
@model StockMgtApp.Pages.Logic.IndexModel
@{
}

<div>
    @if (Model.StockItem.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>StockName</th>
                    <th>Quantity</th>
                    <th>Unit cost</th>
                    <th>Value (N)</th>
                    <th>Current Issue</th>
                    <th>StockBalance</th>
                    <th>Issue To Date</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.StockItem)

                {
                <tr>
                    <td>@item.Id </td>
                   
                    <td>@item.StockName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Unitprice</td>
                    <td>@item.Total</td>
                    <td>@item.IssueOut</td>
                    <td>@item.StockBalance</td>
                    <td>@item.NewTotal</td>
                    <td> <a href="/Logic/Modify?id=@item.Id" class="btn btn-primary"> Edit <i class="fa-regular fa-pen-to-square"></i></a></td>
                    <td> <a href="/Logic/Delete?id=@item.Id" onclick=" return confirm ('Do you want to delete this?')" class="btn btn-danger">Delete </a></td>
                    <td> <a href="/Logic/Details?id=@item.Id" class="btn btn-dark">Read </a> </td>
                    <td> <a href="/Logic/Issue?id=@item.Id" onclick="return confirm('Check the Reorder Level')" class="btn btn-primary">Issue</a></td>

                </tr>
                }
            </tbody>

        </table>

    }
    else
    {
        <h3>No List exists!</h3>
    }
        
</div>
